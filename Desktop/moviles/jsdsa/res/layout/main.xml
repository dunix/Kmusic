<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ListView
	    android:id="@+id/busqueda"
	    android:layout_width="match_parent"
	    android:layout_height="220dp"
	    android:layout_below="@+id/NombreArtistaAlbumTab"
	     android:layout_alignParentBottom="true"
	     >
	</ListView>

	<TextView
	    android:id="@+id/NombreArtistaAlbumTab"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Resultados: \n"
	    android:textSize="25dp"
	     android:layout_below="@+id/tabs_fragment"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<fragment
	    android:id="@+id/tabs_fragment"
	    android:layout_width="match_parent"
	    android:layout_height="250dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_weight="17.03"
	    class="com.example.kmusic.TabsFragment" />

</RelativeLayout>
